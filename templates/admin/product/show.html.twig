{% block title %}
Admin Product
{% endblock %}


{% block body %}

    <div class="backgroundF7F4EF">


		<div class="container">

			<div class="col-12 paddingtop50">
				<h1 class="h1Product">Barber'cut</h1>
				<h2 class="h2Product">Toutes les details de la commande !</h2>
			</div>

			<div class="paddingtopbot50">

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ product.id }}</td>
                        </tr>
