                        </tr>
                    </tbody>
                </table>

			</div>

		</div>

        <div class="paddingbot20">
            <a class="return" href="{{ path('product_index') }}">Retour</a>
        </div>
        
	</div>

    {{ include('admin/product/_delete_form.html.twig') }}

