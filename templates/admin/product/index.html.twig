{% extends "admin/base_admin.html.twig" %}

{% block title %}
Admin Product Home
{% endblock %}

{% block body %}

    <div class="backgroundF7F4EF">

		<div class="container">

			<div class="col-12 paddingtop50">
				<h1 class="h1Product">Barber'cut</h1>
				<h2 class="h2Product">Ajouter, Modifier ou Supprimer tous vos produits !</h2>
				<a class="btn color-button" href="{{ path('product_new') }}">Ajouter</a>
			</div>

			<div class="row">

				{% for product in products %}
                    <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
                        <div class="card cardStyle1">
                            <img src="{{ asset(product.imagePath) }}" alt="{{ product.name }}" class="card-img-top">
                            <div class="card-body text-center">
                                <h5 class="text-center">{{ product.name }}</h5>
                                <h5 class="text-center">{{ product.price | euroPrice }}</h5>
                            </div>
                            <div class="card-button">
                                <a href="{{ path('admin_product_id_show',{'id' : product.id}) }}" class="btn color-button w-100">Voir</a>
                                <a href="{{ path('product_edit',{'id' : product.id }) }}" class="btn btn-info buttonUpdate w-100">Modifier</a>
                                {{ include('admin/product/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
			</div>

		</div>

    </div>

{% endblock %}