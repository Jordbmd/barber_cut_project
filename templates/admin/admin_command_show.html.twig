{% extends "customer/base_customer.html.twig" %}

{% block title %}
	Mes commandes
{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>N° de commande</th>
                <td>{{ command_shop.id }}</td>
            </tr>
            <tr>
                <th>Date de la commande</th>
                <td>{{ command_shop.createdAt ? command_shop.createdAt|date('D-d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ command_shop.total | euroPrice}}</td>
            </tr>
            <tr>
                <th>La commande a bien été facturé ?</th>
                <td>{{ command_shop.isPayed ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ command_shop.getUser.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ command_shop.getUser.firstname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ command_shop.getUser.email }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ command_shop.getUser.getAddress.country }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ command_shop.getUser.getAddress.city }}</td>
            </tr>
            <tr>
                <th>Code postale</th>
                <td>{{ command_shop.getUser.getAddress.postalcode }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ command_shop.getUser.getAddress.street }}</td>
            </tr>
            <tr>
                <th>Informations supplementaires</th>
                <td>{{ command_shop.getUser.getAddress.commentary }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('command_shop_index') }}">Retour</a>

{% endblock %}
