{% extends 'customer/base_customer.html.twig' %}

{% block title %}Register !{% endblock %}


{% block body %}
    <div class="d-flex justify-content-center backgroundF7F4EF paddingtopbot50">

        <div class="container py-5">

            <div class="row">

                <div class="card">

                    <div class="textTitleCard margintop20 paddingtopbot10 backgroundF7F4EF">
                        <h3 class="text-center">Cr√©ez-vous un compte !</h3>
                    </div>
                    
                    <div class="col-12">
                        {{ form_start(registrationForm) }}
                                <div class="card-body">
                                    <div class="row">
                                    

                                        <div class="form-group col-md-4">
                                            {{ form_row(registrationForm.pseudo) }}
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_row(registrationForm.firstname) }}
                                        </div>

                                        <div class="form-group col-md-4">
                                            {{ form_row(registrationForm.lastname) }}
                                        </div>

                                        <div class="col-sm-6">
                                            {{ form_row(registrationForm.email) }}
                                        </div>

                                        <div class="col-sm-6">
                                            {{ form_row(registrationForm.phone_number) }}
                                        </div>


                                        <div class="col-sm-12 col-md-6">
                                        {{ form_row(registrationForm.plainPassword.first) }}
                                        </div>
                                        <div class="col-sm-12 col-md-6">
                                        {{ form_row(registrationForm.plainPassword.second) }}
                                        </div>

                                        {{ form_row(registrationForm.CGV) }}

                                        <button type="submit" class="btn color-button">Register</button>
                                </div>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}

