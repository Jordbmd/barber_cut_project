					{% for i in (products|length - 1)..(products|length - 4) %}
					
						<div class="col-sm-12 col-md-6 col-lg-3 mt-3">
							<div class="card cardStyle1" style="width: 18rem;">
								<img src="{{ asset(products[i].imagePath) }}" alt="{{ products[i].name }}" class="card-img-top">
								<div class="card-body text-center">
									<h5 class="text-center">{{ products[i].name }}</h5>
									<h5 class="text-center">{{ products[i].price | euroPrice }}</h5>
									<a class="btn color-button" href="{{ path('customer_product_id_show',{'id' : products[i].id}) }}">Voir le produit</a>
								</div>
							</div>
						</div>
						
