{% extends "customer/base_customer.html.twig" %}

{% block body %}

{% block header %}

	{# PARTIE HEADER #}
	<section class="carousel">
		<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-inner navheight">

				<div class="carousel-item active">
					<img src="\uploads\images\green.jpg" class="d-block w-100 imageCarroussel" alt="salon">
				</div>

				<div class="carousel-item">
					<img src="\uploads\images\coiffure.jpg" class="d-block w-100 imageCarroussel" alt="">
				</div>

			</div>
		</div>
	</section>

{% endblock %}

	{# PARTIE LISTE PRODUITS #}
	<section>
		<div class="container py-3">
			<div class="row">
				<div class="col-12 mt-3">
					{% include "customer/shared/_messages_flash.html.twig" %}
				</div>
				<div class="col-12">
					<h3 class="h3Home">Barber'Cut</h3>
					<h4 class="h4Home">PRODUITS POPULAIRES</h4>
				</div>



				{% if products %}

					{# boucle qui affiche les derniers produits #}

					{% for i in (products|length - 1)..(products|length - 4) %}
					
						<div class="col-sm-12 col-md-6 col-lg-3 mt-3">
							<div class="card" style="width: 18rem;">
								<img src="{{ asset(products[i].imagePath) }}" alt="{{ products[i].name }}" class="card-img-top">
								<div class="card-body text-center">
									<h5 class="text-center">{{ products[i].name }}</h5>
									<h5 class="text-center">{{ products[i].price | euroPrice }}</h5>
									<a class="btn color-button" href="{{ path('customer_product_id_show',{'id' : products[i].id}) }}">Voir le produit</a>
								</div>
							</div>
						</div>
						
					{% endfor %}
				
				{% endif %}

				
			</div>
		</div>
	</section>


