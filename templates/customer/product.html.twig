{% extends "customer/base_customer.html.twig" %}

{% block title %}
	Magasin
{% endblock %}

{% block body %}


	<div class="container">
		<div class="row">
			<div class="col-12 mt-3 d-flex align-items-center justify-content-between">
				<h1>Liste des produits</h1>
			</div>

			<div class="col-12 mt-3">
				<div class="card rounded-0">
					<div class="card-header">
						<h3>Formulaire de recherche</h3>
					</div>
					<div class="card-body">
						{{ form_start(form)}}

						{{ form_widget(form)}}

						<button class="btn btn-info mt-3" type="submit">Rechercher</button>

						{{ form_end(form)}}
					</div>
				</div>
			</div>

			<div class="navigation py-2">
				{{ knp_pagination_render(products) }}
			</div>
			{% for product in products %}
				<div class="col-sm-12 col-md-6 col-lg-4 mt-3">
					<div class="card rounded-0" style="width: 18rem;">
						<img src="{{ asset(product.imagePath) }}" alt="{{ product.name }}" class="card-img-top">
						<div class="card-body text-center">
							<h5 class="text-center">{{ product.name }}</h5>
							<h5 class="text-center">{{ product.price | euroPrice }}</h5>
							<a href="{{ path('customer_product_id_show',{'id' : product.id}) }}" class="btn btn-primary rounded-0 bg">Voir le produit</a>
						</div>
					</div>
				</div>


			{% endfor %}
			<div class="navigation py-2">
				{{ knp_pagination_render(products) }}
			</div>
		</div>

	</div>
{% endblock %}
