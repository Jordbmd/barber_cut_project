{% extends "customer/base_customer.html.twig" %}

{% block body %}

	<div class="backgroundF7F4EF">
		<div class="container py-5">

			<div class="row">

				<div class="col-12 mt-3">
					{% include "customer/shared/_messages_flash.html.twig" %}
				</div>

				<div class="col-sm-12 col-md-6">
					<img src="{{ asset(product.imagePath) }}" alt="{{ product.name }}" class="w-100 imageProductPage">
				</div>

				<div class="col-sm-12 col-md-6">
					<div class="card cardProduct">
						<div class="card paddingtop10 cardTitle backgroundF7F4EF">
							<h3 class="text-center textTitleCard">{{ product.name }}</h3>
						</div>
						<div class="card-body">
							<p class="text-card-show">{{ product.description }}</p>
							<p class="text-center fs-1 fw-bold">{{ product.price | euroPrice }}</p>
						</div>
						<div class="">
							<a href="{{ path('add_product',{'id' : product.id}) }}" class="btn w-100 color-button">Ajouter au panier</a>
						</div>
					</div>
				</div>

			</div>

		</div>
	</div>

{% endblock %}
